<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingStart">30sp</item>
    </style>
    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="cornerRadius">50dp</item>
    </style>
    <style name="Base.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>